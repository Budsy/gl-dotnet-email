{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Email": {
    "User": "YOUR_SENDGRID_USER",
    "Key": "YOUR_SENDGRID_PASS",
    "DefaultSender": {
      "Email": "no-reply@geeklearning.io",
      "DisplayName": "Geek Learning"
    },
    "TemplateStorage": "Templates"
  },
  "Storage": {
    "Stores": {
      "Templates": {
        "Provider": "FileSystem",
        "Parameters": {
          "Path": "Templates"
        }
      }
    }
  }
}
